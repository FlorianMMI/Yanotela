{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["./tests/setup.js"],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "forceExit": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "transform": {},
  "transformIgnorePatterns": [
    "node_modules/(?!(@prisma/client|.prisma)/)"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
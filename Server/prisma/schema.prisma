generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id              Int         @id @default(autoincrement())
  pseudo          String      @unique
  prenom          String
  nom             String
  email           String      @unique
  token           String      @unique
  is_verified     Boolean     @default(false)
}

{
  "family": "yanotela-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::987686461748:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "client",
      "image": "987686461748.dkr.ecr.eu-west-3.amazonaws.com/yanotela:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "environment": [
        {
          "name": "HOSTNAME",
          "value": "0.0.0.0"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ]
    },
    {
      "name": "server",
      "image": "987686461748.dkr.ecr.eu-west-3.amazonaws.com/yanotela-server:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 3001
        }
      ]
    }
  ]
}
